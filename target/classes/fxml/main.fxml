<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.securetransfer.controller.ui.MainController"
            stylesheets="/styles/main.css">
    
    <!-- Top Bar -->
    <top>
        <HBox styleClass="top-bar">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            
            <!-- Logo and Title -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Circle radius="15" fill="#667eea"/>
                <Text styleClass="app-title">SecureTransfer</Text>
            </HBox>
            
            <!-- User Info and Logout -->
            <HBox alignment="CENTER_RIGHT" spacing="15" HBox.hgrow="ALWAYS">
                <Label fx:id="welcomeLabel" styleClass="username-label"/>
                <Button fx:id="logoutButton" text="Logout" styleClass="logout-button" onAction="#handleLogout"/>
            </HBox>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="main-content">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- File Transfer Section -->
            <VBox spacing="15" styleClass="transfer-section">
                <Text styleClass="section-title">Send File</Text>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="selectFileButton" text="Select File" styleClass="primary-button" onAction="#handleSendFile"/>
                    <Button fx:id="transferButton" text="Transfer" styleClass="primary-button" onAction="#handleTransfer"/>
                </HBox>
                
                <ProgressBar fx:id="transferProgress" progress="0.0" maxWidth="Infinity"/>
                <Label fx:id="statusLabel" styleClass="status-label"/>
            </VBox>
            
            <!-- File List -->
            <VBox spacing="15" styleClass="history-section">
                <Text styleClass="section-title">Files</Text>
                
                <TableView fx:id="fileTable" styleClass="transfer-table">
                    <columns>
                        <TableColumn fx:id="fileNameColumn" text="File Name" prefWidth="200"/>
                        <TableColumn fx:id="fileSizeColumn" text="Size" prefWidth="100"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>